  },
  "confidence_thresholds": {
    "high_confidence": 0.8,
    "medium_confidence": 0.6,
    "low_confidence": 0.4,
    "disambiguation_threshold": 0.1,
    "context_boost_threshold": 0.05
  },
  "quality_metrics": {
    "min_examples_per_intent": 40,
    "target_examples_per_intent": 60,
    "max_similarity_overlap": 0.7,
    "min_confidence_for_production": 0.6
  }
}
