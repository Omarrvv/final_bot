        ]
      },
      "resolution": "keyword_based"
    },
    "practical_vs_faq": {
      "condition": "similarity_difference < 0.08",
      "primary_intent": "practical_info",
      "secondary_intent": "faq_query",
      "keywords": {
        "practical_indicators": [
          "tip",
          "currency",
          "transport",
          "safety",
          "how to"
        ],
        "faq_indicators": ["cost", "price", "how much", "when", "expensive"]
      },
      "resolution": "keyword_based"
    },
    "attraction_vs_hotel": {
      "condition": "similarity_difference < 0.15",
      "primary_intent": "hotel_query",
      "secondary_intent": "attraction_info",
      "keywords": {
        "hotel_indicators": [
          "hotel",
          "stay",
          "accommodation",
          "room",
          "lodge",
          "resort"
        ],
        "attraction_indicators": [
          "pyramid",
          "temple",
          "monument",
          "site",
          "attraction",
          "visit",
          "see"
        ]
      },
      "resolution": "keyword_based"
    },
    "restaurant_vs_attraction": {
      "condition": "similarity_difference < 0.05",
      "primary_intent": "restaurant_query",
      "secondary_intent": "attraction_info",
      "keywords": {
        "restaurant_indicators": [
          "restaurant",
          "eat",
