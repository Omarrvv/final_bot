# Egypt Tourism Chatbot - Environment Variables
# ======================================
# Copy this file to ".env" and adjust values as needed

# Database Configuration
# ---------------------
DATABASE_URI=sqlite:///./data/egypt_chatbot.db
VECTOR_DB_URI=./data/vector_db
CONTENT_PATH=./data

# Session Storage
# --------------
SESSION_STORAGE_URI=file:///./data/sessions
REDIS_URL=redis://localhost:6379/0

# API Keys
# --------
ANTHROPIC_API_KEY=your_anthropic_api_key_here
WEATHER_API_KEY=your_weather_api_key_here
TRANSLATION_API_KEY=your_translation_api_key_here

# Feature Flags (for gradual activation)
# --------------------------------------
# Core architecture flags
USE_NEW_KB=false
USE_NEW_API=false
USE_POSTGRES=false

# Advanced features flags
USE_NEW_NLU=false
USE_NEW_DIALOG=false
USE_RAG=false
USE_REDIS=false
USE_SERVICE_HUB=false

# Security
# -------
JWT_SECRET=generate_a_strong_secret_key_here

# Logging
# -------
LOG_LEVEL=INFO

# Server Configuration
# -------------------
FLASK_ENV=development
FLASK_DEBUG=1 