# Egypt Tourism Chatbot - Environment Variables
# ======================================
# Copy this file to ".env" and adjust values as needed

# Database Configuration
# ---------------------
DATABASE_URI=sqlite:///./data/egypt_chatbot.db # Primary DB for KB/Analytics
VECTOR_DB_URI=./data/vector_db # For RAG
CONTENT_PATH=./data
POSTGRES_URI=postgresql://user:password@host:port/dbname # Optional: For Phase 3
MONGODB_URI=mongodb://host:port/dbname # Optional: If MongoDB is used

# Session Storage
# --------------
# Use 'redis://redis:6379/1' for Docker, 'redis://localhost:6379/0' locally, or 'file:///./data/sessions' for file storage
SESSION_STORAGE_URI=file:///./data/sessions 
REDIS_URL=redis://localhost:6379/0 # Used if SESSION_STORAGE_URI starts with redis://

# API Keys
# --------
ANTHROPIC_API_KEY=your_anthropic_api_key_here
WEATHER_API_KEY=your_weather_api_key_here
TRANSLATION_API_KEY=your_translation_api_key_here
HF_API_KEY= # Optional: Huggingface API key
OPENAI_API_KEY= # Optional: OpenAI API Key

# Feature Flags (for gradual activation)
# --------------------------------------
# Core architecture flags
USE_NEW_KB=false
USE_NEW_API=false
USE_POSTGRES=false # Controls DB backend connection (Requires migration first)
USE_REDIS=false # Controls session storage backend (Often auto-set by SESSION_STORAGE_URI)

# Advanced features flags
USE_NEW_NLU=false
USE_NEW_DIALOG=false
USE_RAG=false
USE_SERVICE_HUB=false
USE_MONGODB=false # Deprecated/Optional?
USE_PROMETHEUS=false # Optional: For metrics

# Security
# -------
JWT_SECRET=generate_a_strong_secret_key_here # MUST be strong and kept secret in production

# Logging
# -------
LOG_LEVEL=INFO # DEBUG, INFO, WARNING, ERROR, CRITICAL
ENABLE_LOGGING=true

# Server Configuration
# -------------------
FLASK_ENV=development # development or production (for Flask app)
FLASK_DEBUG=1 # 1 for True, 0 for False (for Flask app)
ENV=development # General environment setting (used by pydantic-settings)
DEBUG=true # General debug flag (used by pydantic-settings)
FRONTEND_URL=http://localhost:3000 # URL of the React frontend

# Other Configuration
# ------------------
ENABLE_ANALYTICS=true
ENABLE_CACHING=true
ENABLE_TELEMETRY=false
CACHE_TTL=300 # Cache time-to-live in seconds
HUGGINGFACE_REPOSITORY= # Optional: Repo for models

# Paths (Relative to project root)
# -----
MODELS_CONFIG=./configs/models.json
FLOWS_CONFIG=./configs/dialog_flows.json
SERVICES_CONFIG=./configs/services.json
TEMPLATES_PATH=./configs/response_templates 