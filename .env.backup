# Egypt Tourism Chatbot Environment Variables
# CRITICAL: DO NOT INCLUDE SECRETS IN THIS FILE!

# Environment
ENV=development
DEBUG=true
API_HOST=localhost
API_PORT=5050
API_BASE_URL=/api
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5050
# STATIC_PATH=react-frontend/build
AUTH_TESTING_MODE=true

# LLM Settings
LLM_PROVIDER=anthropic
ANTHROPIC_API_KEY=your-api-key-here
CLAUDE_MODEL=claude-3-opus-20240229

# Feature flags
USE_NEW_KB=true
USE_NEW_API=true
USE_POSTGRES=true
USE_REDIS=false
USE_NEW_NLU=false
USE_NEW_DIALOG=false
USE_RAG=true
USE_SERVICE_HUB=false

# Database
DATABASE_URI=sqlite:///./data/egypt_chatbot.db
# For PostgreSQL (if USE_POSTGRES=true)
POSTGRES_HOST=db_postgres # Use service name from docker-compose
POSTGRES_PORT=5432
POSTGRES_DB=egypt_chatbot
POSTGRES_USER=user # Correct user from docker-compose
POSTGRES_PASSWORD=password # Correct password from docker-compose

# Redis connection (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0

# Session management
SESSION_TTL_SECONDS=86400
SESSION_STORAGE_URI=file:///./data/sessions
COOKIE_SECURE=false

# Security
SECRET_KEY=egypt-tourism-chatbot-secret-key
JWT_SECRET=egypt-tourism-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# Database settings - Using PostgreSQL
VECTOR_DB_URI=./data/vector_db
CONTENT_PATH=./data

# PostgreSQL configuration - Using standard URI format
POSTGRES_URI=postgresql://user:password@db_postgres:5432/egypt_chatbot

# API Keys (replace with actual keys if available)
WEATHER_API_KEY=
TRANSLATION_API_KEY=

# Logging
ENABLE_LOGGING=true

# Frontend
FRONTEND_URL=http://localhost:3000

# Paths (Relative to project root)
MODELS_CONFIG=./configs/models.json
FLOWS_CONFIG=./configs/dialog_flows.json
SERVICES_CONFIG=./configs/services.json
TEMPLATES_PATH=./configs/response_templates
